<% if @entry.errors.any? %>
	<ul>
		<%@entry.errors.full_messages.each do |error_msg| %>
			<li><%= error_msg %></li>
		<% end %>
	</ul>
<% end %>


<%= form_for [@project, @entry] do |f| %>
	
	<%= f.label :hours %>
	<%= f.text_field :hours %>

	<%= f.label :minutes %>
	<%= f.text_field :minutes %>

	<%= f.label :date %>
	<%= f.date_field :date, class: "date" %>

	<%= f.label :comments %>
	<%= f.text_field :comments, rows: 3, cols: 40 %>

	<%= f.submit 'Create Entry' %>
<% end %>